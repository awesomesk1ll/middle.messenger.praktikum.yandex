.app__form {
    display: flex;
    flex-direction: column;
    gap: 40px;
    background-color: var(--form-card-bg-color);
    width: 340px;
    max-width: 100%;
    padding: 50px 30px 30px;
    border-radius: 12px;
    .form__title {
        font-weight: 500;
        font-size: 20px;
        line-height: 20px;
        text-align: center;
    }
    .form__items {
        margin-bottom: 17px;
    }
    .form__buttons {
        display: flex;
        flex-direction: column;
        gap: 14px;
        margin-top: auto;
        text-align: center;
    }
}
